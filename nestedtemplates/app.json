{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "Kundenkuerzel": {
          "type": "string",
          "metadata": {
          "description": "Kundenkuerzel (3 Buchstaben)"
          }
        },
        "vmAdminPassword": {
            "type": "securestring",
            "metadata": {
              "description": "Password for the Virtual Machine."
            }
          },
        "APPVMCount": {
            "type": "int",
            "metadata": {
              "description": "Number of VMs to deploy, limit 5"
            }
          }
      },
      "variables": {
      "location": "[resourceGroup().location]",
      "DiagStorageName": "[tolower(concat(parameters('Kundenkuerzel'),'sadiag'))]",
      "vmNameApp": "[tolower(concat(parameters('Kundenkuerzel'),'-vm-app'))]",
      "vmSizeAPP": "Standard_B2s",
      "vmAdminUsername": "vbu-adm",
      "vmOsSku": "2019-Datacenter",
      "vmOsDiskNameApp": "[concat(variables('vmNameApp'),'-osdisk')]",
      "imagePublisher": "MicrosoftWindowsServer",
      "imageOffer": "WindowsServer",
      "VMStorageTypeApp": "Standard_LRS",
      "vmDataDiskCountApp": 4,
      "vmDataDiskSize": "15",
      "charactersToSkip": 7
    }, 
    "resources": [
        {
            "apiVersion": "2017-03-30",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[concat(variables('vmNameApp'),copyindex(1))]",
            "location": "[variables('location')]",
            "copy": {
                "name": "appLoop",
                "count": "[parameters('AppVMCount')]"
              },
           
            "properties": {
              "hardwareProfile": {
                "vmSize": "[variables('vmSizeApp')]"
              },
              "osProfile": {
                "computerName": "[concat(variables('vmNameApp'),copyindex(1))]",
                "adminUsername": "[variables('vmAdminUsername')]",
                "adminPassword": "[parameters('vmAdminPassword')]"
              },
              "storageProfile": {
                "imageReference": {
                  "publisher": "[variables('imagePublisher')]",
                  "offer": "[variables('imageOffer')]",
                  "sku": "[variables('vmOsSku')]",
                  "version": "latest"
                },
                "osDisk": {
                  "name": "[concat(variables('vmOsDiskNameAPP'),copyindex(1))]",
                  "caching": "ReadWrite",
                  "createOption": "FromImage",
                  "managedDisk": {
                    "storageAccountType": "[variables('VMStorageTypeApp')]"
                  }
                },
      
                "copy": [
                  {
                    "name": "dataDisks",
                    "count": "[variables('vmDataDiskCountApp')]",
                    "input": {
                      "name": "[concat(variables('vmNameApp'),copyindex(1),'-datadisk','-',copyIndex('dataDisks'))]",
                      "diskSizeGB": "[variables('vmDataDiskSize')]",
                      "lun": "[copyIndex('dataDisks')]",
                      "createOption": "Empty",
                      "managedDisk": {
                        "storageAccountType": "[variables('VMStorageTypeApp')]"
                      }
                    }
                  }
                ]
              },
              "networkProfile": {
                "networkInterfaces": [
                  {
                    "id": "[resourceId('Microsoft.Network/networkInterfaces',concat(tolower(concat(parameters('Kundenkuerzel'),'-nic-',skip(concat(variables('vmNameApp'),copyindex(1)),variables('charactersToSkip'))))))]"
                  }
                ]
              },
              "diagnosticsProfile": {
                "bootDiagnostics": {
                  "enabled": true,
                  "storageUri": "[concat('http://', variables('DiagStorageName'), '.blob.core.windows.net')]"
                }
            }
        }
          }
         
        ]
    
    }




